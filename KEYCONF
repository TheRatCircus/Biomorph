AddKeySection "$BIO_MODTITLE" BIO_Section

addmenukey "$BIO_KB_DROPWEAP" "use BIO_WeaponDrop"
defaultbind Y "use BIO_WeaponDrop"

addmenukey "$BIO_KB_UNEQUIPARMOR" "use BIO_UnequipArmor"
defaultbind V "use BIO_UnequipArmor"

addmenukey "$BIO_KB_PERKMENU" "event bio_perkmenu"
defaultbind P "event bio_perkmenu"

// Debug console event aliases

alias bio_help_ "event bio_help"

alias bio_playerdiag_ "event bio_playerdiag"
alias bio_weapdiag_ "event bio_weapdiag"
alias bio_equipdiag_ "event bio_equipdiag"
alias bio_lootdiag_ "event bio_lootdiag"
alias bio_xp_ "event bio_xp"
alias bio_xpinfo_ "event bio_xp"
alias bio_recalcweap_ "netevent bio_recalcweap"
alias bio_weaprecalc_ "netevent bio_recalcweap"
alias bio_lvlup_ "netevent bio_lvlup"
alias bio_lvlup_5 "netevent bio_lvlup 5"
alias bio_lvlup_10 "netevent bio_lvlup 10"
