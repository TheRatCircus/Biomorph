AddOptionMenu "OptionsMenu"
{
	SubMenu "$BIOM_MODTITLE", "biom_Options"
}

OptionMenu "biom_Options"
{
	class biom_TooltipOptionMenu
	biom_TooltipGeometry 0.0, 0.0, 0.15, 0.1, 0.1, 0.5

	Title "$BIOM_OPTTITLE"

	StaticText ""
	StaticText "$BIOM_OPTCAT_BALANCE"

	StaticText ""
	StaticText "$BIOM_OPTCAT_CONTROL"

	Option "$BIOM_OPTLBL_AUTORELOAD_PRE", "BIOM_autoreload_pre", "biom_AutoReload"
	Option "$BIOM_OPTLBL_AUTORELOAD_POST", "BIOM_autoreload_post", "biom_AutoReload"
	Option "$BIOM_OPTLBL_BERSERKSWITCH", "BIOM_berserkswitch", "biom_BerserkSwitch"
	Option "$BIOM_OPTLBL_MULTIBARRELFIRE", "BIOM_multibarrelfire", "biom_MultiBarrelFire"
	Option "$BIOM_OPTLBL_MULTIRELOADMODE", "BIOM_multireload", "biom_MultiReloadMode"

	StaticText ""
	StaticText "$BIOM_OPTCAT_GUI"

	Slider "$BIOM_OPTLBL_INVBARSLOTS", "BIOM_invbarslots", 1, 32, 1, 0

	StaticText ""
	StaticText "$BIOM_OPTCAT_AUDIOVIS"

	Option "$BIOM_OPTLBL_QUAKE", "BIOM_quake", "OnOff"
}

OptionValue "biom_AutoReload"
{
	0, "$BIOM_OPTVAL_AUTOREL_ALWAYS"
	1, "$BIOM_OPTVAL_AUTOREL_SINGLE"
	2, "$BIOM_OPTVAL_AUTOREL_NEVER"
}

OptionValue "biom_BerserkSwitch"
{
	0, "$BIOM_OPTVAL_BSKS_NONE"
	1, "$BIOM_OPTVAL_BSKS_MELEE"
	2, "$BIOM_OPTVAL_BSKS_FIRSTONLY"
}

OptionValue "biom_MultiBarrelFire"
{
	0, "$BIOM_OPTVAL_MBF_PRIM"
	1, "$BIOM_OPTVAL_MBF_SEC"
}

OptionValue "biom_MultiReloadMode"
{
	0, "$BIOM_OPTVAL_MRM_AUTO"
	1, "$BIOM_OPTVAL_MRM_HOLD"
}

// Inaccessible from the title menu ////////////////////////////////////////////

OptionMenu "biom_PlayerMenu"
{
	class biom_PlayerMenu
	title "$BIOM_PLAYERMENU_TITLE"
}
