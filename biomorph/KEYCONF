addkeysection "$BIO_MODTITLE" Biomorph

// Controls

addmenukey "$BIO_KB_DROPWEAP" "use BIO_WeaponDrop"
defaultbind Y "use BIO_WeaponDrop"

addmenukey "$BIO_KB_WEAPMODMENU" "event bio_weapmodmenu"
defaultbind M "event bio_weapmodmenu"

// Debug event aliases

alias bio_help "event bio_usrcons 0"
alias bio_lootdiag "event bio_usrcons 1"
alias bio_weapdiag "event bio_usrcons 2"
alias bio_monsval "event bio_usrcons 3"
alias bio_lootsim "event bio_usrcons 4"
alias bio_weapserialize "event bio_usrcons 5"

alias bio_lootcoreregen "netevent bio_usrnet 0 0"
alias bio_weaplootregen "netevent bio_usrnet 0 1"
alias bio_mutalootregen "netevent bio_usrnet 0 2"
alias bio_genelootregen "netevent bio_usrnet 0 3"
alias bio_opmoderegen "netevent bio_usrnet 0 4"
alias bio_morphregen "netevent bio_usrnet 0 5"
